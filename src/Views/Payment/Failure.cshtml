@model form_builder.ViewModels.PaymentFailureViewModel
@{
    ViewData["Title"] = Model.FormName;
    ViewData["PageTitle"] = Model.PageTitle;
    ViewData["FeedbackForm"] = Model.FeedbackForm;
    ViewData["FeedbackPhase"] = Model.FeedbackPhase;
}

<h1 class="govuk-heading-l">We're sorry, there was a problem with the form</h1>

<p class="smbc-body">
    No money has been taken from your account, please try again if you want to continue.
</p>

<p class="smbc-body">Your reference number is @Model.Reference</p>
<p class="smbc-body">If this problem continues, ring the contact centre on 0161 217 6111 and give them your reference number to continue.</p>

<a class="govuk-button" href=@Model.PaymentUrl>Go back to try the payment again</a>
<br />
<a class="govuk-link" href="https://www.stockport.gov.uk">Go to home page</a>
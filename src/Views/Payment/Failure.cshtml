@model form_builder.ViewModels.PaymentFailureViewModel
@{
    ViewData["Title"] = Model.FormName;
    ViewData["PageTitle"] = Model.PageTitle;
    ViewData["FeedbackUrl"] = Model.FeedbackForm;
    ViewData["FeedbackPhase"] = Model.FeedbackPhase;
}

<h1>We're sorry, there was a problem with the form</h1>

<p className="no-margin-bottom">
    No money has been taken from your account, please try again if you want to continue.
</p>
<p>Your reference number is @Model.Reference</p>
<p>If this problem continues, ring the contact centre on 0161 217 6111 and give them your reference number to continue.</p>
<a className="button-primary" href=@Model.PaymentUrl>Go back to try the payment again</a>
<br />
<a className="button-secondary" href="https://www.stockport.gov.uk">Go to home page</a>
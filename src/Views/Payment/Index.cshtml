@model form_builder.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = Model.FormName;
    ViewData["PageTitle"] = Model.PageTitle;
    ViewData["BannerTypeformUrl"] = Model.FeedbackForm;
}

    <div id="root" class="text-center">
        <h1>Payment Successful</h1>
        <h2>Thanks for your payment</h2>
        <p>Your reference number is @Model.Reference</p>
        <p>Please keep a record of these details as you will need them if you want to contact us about your payment</p>
        <p>If you provided your email address when you made your payment, you will receive an email receipt.</p>
        <h2>What happens next</h2>
        <p>Content author: You should include information that is helpful to the user about what they need to do next.</p>
        <a className="button-primary" href="https://www.stockport.gov.uk">Go to home page</a>
    </div>
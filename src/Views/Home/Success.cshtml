@model form_builder.ViewModels.SuccessViewModel
@{
    ViewData["Title"] = Model.FormName;
    ViewData["PageTitle"] = Model.PageTitle;
    ViewData["FeedbackPhase"] = Model.FeedbackPhase;
    ViewData["BannerTitle"] = Model.BannerTitle;
    ViewData["LeadingParagraph"] = Model.LeadingParagraph;
    ViewData["DisplayBreadcrumbs"] = Model.DisplayBreadCrumbs;
    ViewData["Breadcrumbs"] = Model.BreadCrumbs;

}

<div class="smbc-panel smbc-panel--confirmation">
    <h1 class="govuk-panel__title">@Model.BannerTitle</h1>

    @if (!string.IsNullOrEmpty(Model.LeadingParagraph))
    {
        <div class="govuk-body-l">@Model.LeadingParagraph</div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Reference))
    {
        <div class="smbc-panel__body">Your reference number is: <strong>@Html.Raw(Model.Reference)</strong></div>
    }
</div>

@Html.Raw(Model.PageContent)

@inject IOptions<TagManagerConfiguration> configuration

@if (!string.IsNullOrEmpty(configuration.Value.TagManagerId))
{
    <noscript aria-hidden="true">
        <iframe src="https://www.googletagmanager.com/ns.html?id=@configuration.Value.TagManagerId"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
}
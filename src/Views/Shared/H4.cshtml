@model form_builder.Models.Elements.Element
@{
    var cssClass = "govuk-heading-s";
    switch (Model.Properties.Size)
    {
        case ESize.ExtraLarge:
            cssClass = "govuk-heading-xl";
            break;
        case ESize.Large:
            cssClass = "govuk-heading-l";
            break;
        case ESize.Medium:
            cssClass = "govuk-heading-m";
            break;
    }
}
<h4 class="@cssClass">@Model.Properties.Text</h4>
@model form_builder.ViewModels.CalendarDayViewModel

@{
    var disabledClass = "smbc-body govuk-!-margin-bottom-0";
}

@if (Model.Day.IsDisabled)
{
    if (Model.Day.IsNotWithinCurrentSelectedMonth)
    {
        <td class="smbc-calendar-cell smbc-date-disabled govuk-!-padding-0">
            <span class="@disabledClass"></span>
        </td>
    }
    else
    {
        <td class="smbc-calendar-cell smbc-date-disabled govuk-!-padding-0">
            <span aria-hidden="true" class="@disabledClass">@Model.Day.Date.Day</span>
        </td>
    }
}
else
{
    <td class="smbc-calendar-cell govuk-!-padding-0">
            <input type="radio"
                value="@Model.Day.Date"
                name="@Model.QuestionId"
                id="@Model.InputId" 
                aria-describedby="@Model.GetCalendarHint()"
                @(Model.Day.Checked ? "checked" : string.Empty) />

            <label aria-hidden="true" 
                class="smbc-body govuk-!-margin-bottom-0"
                for="@Model.InputId">
                @Model.Day.Date.Day
            </label>

            <span class="govuk-visually-hidden" id="@Model.GetCalendarHint()">@Model.Day.Date.ToString("dddd dd MMMM")</span>
    </td>
}
@{
    var daysOfWeek = new string[7] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
}

<tr>
    @foreach (var item in daysOfWeek)
    {
        <th scope="col" class="smbc-calendar-weekdays">
            <p aria-hidden="true"
                class="govuk-body govuk-!-font-weight-bold govuk-!-font-size-16 govuk-!-margin-bottom-0 govuk-!-margin-top-0">
                @item.Substring(0, 1)
            </p>
            <span class="govuk-visually-hidden">@item</span>
        </th>
    }
</tr>